# ======================
# 基础系统配置
# ======================
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_GENERIC=y
CONFIG_HAS_SUBTARGET=y
CONFIG_HAS_DEVICES=y
CONFIG_TARGET_BOARD="x86"
CONFIG_TARGET_SUBTARGET="64"
CONFIG_TARGET_PROFILE="Generic"

# ======================
# 内核 & 基础功能
# ======================
CONFIG_KERNEL_KALLSYMS=y
CONFIG_KERNEL_PROFILING=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SHOW_SCRIPT=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SEAMLESS_XZ=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SEAMLESS_BZ2=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SEAMLESS_GZ=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SEAMLESS_LZMA=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SEAMLESS_ZSTD=y

# ======================
# 必要的依赖（确保插件能运行）
# ======================
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-nfs=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y
CONFIG_PACKAGE_kmod-nls-cp437=y
CONFIG_PACKAGE_kmod-nls-iso8859-1=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_parted=y
CONFIG_PACKAGE_swap-utils=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_ntfs-3g=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_tar=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_zip=y
CONFIG_PACKAGE_ca-certificates=y

# ======================
# Luci 基础（必须）
# ======================
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_luci-lib-nixio=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-lib-fs=y
CONFIG_PACKAGE_luci-lib-docker=y

# ======================
# 你需要的 Luci 插件
# ======================
# 1. 文件浏览器（Go 版）
CONFIG_PACKAGE_luci-app-filebrowser-go=y

# 2. 访问控制增强版
CONFIG_PACKAGE_luci-app-accesscontrol-plus=y

# 3. 磁盘管理（LVM/RAID/分区）
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_btrfs-progs=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_lsblk=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_parted=y

# 4. Samba4 文件共享（Windows 兼容）
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_samba4=y

# 5. Web 终端（TTYD）
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y

# 6. TurboAcc（加速插件，含 KCP/BBR）
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_simple-obfs=y
CONFIG_PACKAGE_kcptun-client=y
CONFIG_PACKAGE_shadowsocks-libev-ssr-redir=y
CONFIG_PACKAGE_shadowsocks-libev-ssr-server=y

# 7. 流量监控（WRTBWMon）
CONFIG_PACKAGE_luci-app-wrtbwmon=y
CONFIG_PACKAGE_wrtbwmon=y

# ======================
# Docker 支持（核心）
# ======================
CONFIG_PACKAGE_luci-app-docker=y
CONFIG_PACKAGE_docker-ce=y
CONFIG_PACKAGE_containerd.io=y
CONFIG_PACKAGE_docker-cli=y
CONFIG_PACKAGE_docker-compose=y

# ======================
# 其他常用插件（可选）
# ======================
# IPv6 支持
CONFIG_PACKAGE_ipv6helper=y

# WireGuard VPN
CONFIG_PACKAGE_luci-app-wireguard=y
CONFIG_PACKAGE_wireguard-tools=y

# AdGuardHome（广告过滤）
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_adguardhome=y

# 网络诊断工具
CONFIG_PACKAGE_luci-app-network-diagnosis=y

# UPnP & NAT-PMP
CONFIG_PACKAGE_miniupnpd=y
CONFIG_PACKAGE_luci-app-upnp=y

# DDNS（动态域名）
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_luci-app-ddns=y

# VPN（可选）
CONFIG_PACKAGE_luci-app-openvpn=y
CONFIG_PACKAGE_openvpn-openssl=y
